{
  "name": "backlog_benri",
  "short_name" : "backlog_benri",
  "version": "0.0.8",
  "manifest_version": 2,
  "description": "Add convenient(Benri in Japanese) functions for backlog",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
      "images/link.png"
  ],
  "default_locale": "ja",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "background",
    "clipboardWrite",
    "contextMenus",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.backlog.jp/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
